---
import Base from "../layouts/Base.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import sunset from "../assets/sunset.webp";
import coastal2 from "../assets/coastal2.png";
import books from "../assets/books.png";
import kiteworkscard from "../assets/kiteworkscard.png";
import openbankingcard from "../assets/openbankingcard.png";
import lpc from "../assets/lpc.png";
import fastpencilcard from "../assets/fastpencilcard.png";
import FooterContact from "../components/FooterContact.astro";
import juice from "../assets/juice.png";
import whale_shirts from "../assets/whale_shirts.png";
import jack from "../assets/jack.png";
import kamari from "../assets/kamari.jpg";
import coastalcard from "../assets/coastalcard.png";
import linguidcard from "../assets/linguidcard.png";
import packaging_222 from "../assets/packaging_222.jpg";
---

<Base title="Matthew O'Leary - Home">
  <section class="px-4 2xl:px-0">
    <h1
      class="font-heading text-4xl md:text-5xl xl:text-6xl text-indigo-700 font-bold py-8 animate-raise text-center"
    >
      Designer & Creative Professional
    </h1>
    <p class="text-base px-1 md:px-3 md:text-xl mb-8 text-stone-500">
      With over 15 years of experience across branding, web design, and digital
      marketing, I create original visual content and develop assets that
      perform across digital and print. I design for websites, social media, and
      email campaigns, and I adapt creative concepts for packaging, signage, and
      large-scale print. I bring a strong production mindset, using AI tools,
      design systems, and templating strategies to streamline workflows, ensure
      brand consistency, and support fast-moving teams.
    </p>
    <div class="flex flex-col md:flex-row gap-3 md:gap-4 mb-8">
      <a href="/about" class="w-full md:w-auto md:mx-auto">
        <Button text="More about me" class="w-full" />
      </a>
      <!-- <a href="/MatthewOLearyResume.pdf" class="w-full md:w-auto">
        <button
          type="button"
          class="w-full rounded-full border border-orange-500 px-8 py-3 text-lg font-semibold text-orange-500 bg-white shadow-sm hover:bg-orange-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-500"
        >
          Download resume
        </button>
      </a> -->
    </div>

    <div
      class="photo-gallery grid items-center w-full mx-auto sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-2 mb-2"
    >
      <Card
        img={linguidcard}
        alt="linguid Image"
        title="Linguid"
        link="/work/linguid"
      />

      <Card
        img={kamari}
        alt="jack pitts photography"
        title="Jack Pitts Photography"
        link="/work/jack"
      />
      <Card
        img={coastalcard}
        alt="coastal nature guides"
        title="Coastal Nature Guides"
        link="/work/coastal"
      />

      <Card
        img={books}
        alt="Books Image"
        title="Book Covers"
        link="/work/books"
      />
      <Card
        img={kiteworkscard}
        alt="kiteworks Image"
        title="Kiteworks Web App"
        link="/work/kiteworks"
      />
      <Card
        img={openbankingcard}
        alt="open banking Image"
        title="Open Banking"
        link="/work/openbanking"
      />
      <Card
        img={lpc}
        alt="live price check Image"
