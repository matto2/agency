---
import FooterContact from "../components/FooterContact.astro";
import Socials from "./Socials.astro";
---

<footer class="border-t border-slate-300 px-4">
  <div
    class="grid md:grid-cols-3 md:gap-x-12 place-items-start max-w-4xl mx-auto"
  >
    <div class="mt-6 min-w-96">
      <FooterContact />
    </div>
    <div class="mt-6 mb-4 font-sans font-semibold">
      <p>
        <a
          href="/"
          class="text-base text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >Work</a
        >
      </p>
      <p>
        <a
          href="/about"
          class="text-base text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >About</a
        >
      </p>
      <p>
        <a
          href="/services"
          class="text-base text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >Services</a
        >
      </p>
      <p>
        <a
          href="/contact"
          class="text-base text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >Contact</a
        >
      </p>
      <Socials />
    </div>
    <div class="mt-6 min-w-96">
      <p class="font-sans font-semibold text-slate-400">Other Links</p>

      <p>
        <a
          href="https://olearystudios.com/"
          class="text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >O'Leary Studios</a
        >
      </p>

      <!-- <p>
        <a
          href="https://matthew-oleary-resume.netlify.app/"
          class="text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >My Resume</a
        >
      </p> -->

      <p>
        <a
          href="https://minnieoleary.com/"
          class="text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >minnieoleary.com</a
        >
      </p>

      <p>
        <a
          href="https://keeptheapostrophe.com/"
          class="text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >Keep the Apostrophe in Irish Names</a
        >
      </p>

      <p>
        <a
          href="https://julian-links.netlify.app/"
          class="text-indigo-50 hover:text-indigo-200 hover:underline mb-2"
          >Julian's Links</a
        >
      </p>

      <!-- <p>
        <a
          href="/contact"
          class="text-indigo-600 hover:text-indigo-800 hover:underline mb-2"
          >Contact</a
        >
      </p> -->
    </div>
  </div>

  <div class="my-4 text-center text-slate-400">
    &copy;
    <span id="copyright">
      <script>
        document
          .getElementById("copyright")
          .appendChild(document.createTextNode(new Date().getFullYear()));
      </script>
    </span>
    Matthew O&apos;Leary
  </div>
</footer>
