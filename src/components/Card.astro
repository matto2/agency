---
const { img, alt, title, link } = Astro.props;
import { Image } from "astro:assets";
---

<div class="my-8">
  <a href={link}>
    <div
      class="max-w-md rounded overflow-hidden shadow-lg bg-slate-50 hover:scale-105"
    >
      <Image src={img} class="w-full" alt={alt} />
      <div class="px-4 py-3">
        <div class="font-bold text-lg">{title}</div>
      </div>
    </div>
  </a>
</div>
