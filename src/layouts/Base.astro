---
const { title } = Astro.props;
import "../styles/main.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
// Supports weights 100-900
import "@fontsource-variable/onest";
// import "@fontsource/prata";
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
---

<html lang="en">
  <head>
    <SEO
      title="Custom Graphic & Web Design | Matthew O'Leary Design"
      description="Matthew O'Leary offers expert custom graphic and web design services tailored for startups, small businesses, and organizations. Bringing visions to life with creativity and technical expertise."
      openGraph={{
        basic: {
          title: "Custom Graphic & Web Design | Matthew O'Leary Design",
          type: "website",
          image: "https://mattoleary.design/images/og-image.jpg", // Replace with your actual OG image URL
        },
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "description",
            content:
              "Matthew O'Leary offers expert custom graphic and web design services tailored for startups, small businesses, and organizations. Bringing visions to life with creativity and technical expertise.",
          },
          {
            name: "og:image",
            content: "https://mattoleary.design/images/og-image.jpg", // Replace with your actual OG image URL
          },
          {
            name: "og:title",
            content: "Custom Graphic & Web Design | Matthew O'Leary Design",
          },
          {
            name: "og:description",
            content:
              "Matthew O'Leary offers expert custom graphic and web design services tailored for startups, small businesses, and organizations. Bringing visions to life with creativity and technical expertise.",
          },
        ],
      }}
    />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <!-- Gradient background -->
    <div class="absolute top-0 left-0 right-0 w-screen h-[50vh] -z-10">
      <!-- Left orange blob -->
      <div
        class="absolute -top-20 -left-[200px] w-[800px] h-[800px] bg-gradient-to-b from-orange-400/30 via-orange-400/5 to-transparent rounded-full blur-3xl"
      >
      </div>

      <!-- Middle yellow blob -->
      <div
        class="absolute -top-20 left-1/3 w-[700px] h-[700px] bg-gradient-to-b from-yellow-300/20 via-yellow-300/5 to-transparent rounded-full blur-3xl"
      >
      </div>

      <!-- Right purple blob -->
      <div
        class="absolute -top-20 right-[-200px] w-[800px] h-[800px] bg-gradient-to-b from-purple-400/30 via-purple-400/5 to-transparent rounded-full blur-3xl"
      >
      </div>
    </div>

    <div class="flex flex-col h-screen justify-between">
      <header class="max-w-7xl mx-auto"><Nav /></header>

      <main class="mb-auto max-w-7xl mx-auto">
        <slot />
      </main>
      <div class="bg-slate-700">
        <footer class="max-w-7xl mx-auto">
          <Footer />
        </footer>
      </div>
    </div>
    <script
      data-goatcounter="https://mattolearydesign.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"></script>
  </body>
</html>
